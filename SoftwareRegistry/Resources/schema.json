{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "Type": {
            "type": "string"
        },
        "Name": {
            "type": "string"
        },
        "Version": {
            "type": "string"
        },
        "Files": {
            "type": "object",
            "properties": {
                "Main": {
                    "type": "string"
                }
            },
            "required": [
                "Main"
            ]
        },
        "Installation": {
            "type": [ "object", "null" ],
            "properties": {
                "Source": {
                    "type": "object",
                    "properties": {
                        "Type": {
                            "enum": [ "registry", "url" ]
                        },
                        "Url": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "Type"
                    ]
                },
                "Script": {
                    "type": [ "string", "null" ]
                },
                "Python": {
                    "type": "object",
                    "properties": {
                        "Version": {
                            "type": "string"
                        },
                        "Pip": {
                            "type": "object",
                            "properties": {
                                "RequirementFiles": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "Requirements": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "required": [
                                "RequirementFiles",
                                "Requirements"
                            ]
                        },
                        "Conda": {
                            "type": "object",
                            "properties": {
                                "Requirements": {
                                    "type": "array",
                                    "items": {
                                        "Type": "string"
                                    }
                                },
                                "Channels": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            },
                            "required": [
                                "Requirements",
                                "Channels"
                            ]
                        }
                    },
                    "required": [
                        "Version",
                        "Pip",
                        "Conda"
                    ]
                }
            },
            "required": [
                "Source",
                "Script",
                "Python"
            ]
        },
        "Requirements": {
            "type": "object",
            "properties": {
                "Platforms": {
                    "type": "array",
                    "items": {
                        "enum": [ "windows", "linux", "macos" ]
                    }
                },
                "Parents": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Type": {
                                "type": "string"
                            },
                            "Version": {
                                "type": [ "string", "null" ]
                            }
                        },
                        "required": [
                            "Type",
                            "Version"
                        ]
                    }
                }
            },
            "required": [
                "Platforms",
                "Parents"
            ]
        }
    },
    "required": [
        "Type",
        "Version",
        "Files",
        "Installation",
        "Requirements"
    ]
}
